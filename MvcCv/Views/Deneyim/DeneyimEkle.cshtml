
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Yeni Deneyim Ekleme Sayfası</h4>
<br />
<form method="post">

    <label>Başlık</label>
    <br />
    <input type="text" name="Baslik" class="form-control" placeholder="Başlığı yazınız" />
    <br />
    <input type="text" name="AltBaslik" class="form-control" placeholder="Alt başlık giriniz" />
    <br />
    <input type="text" name="Tarih" class="form-control" placeholder="Çalışma Tarihini giriniz" />
    <br />
    <textarea placeholder="Açıklama giriniz" name="Aciklama" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
